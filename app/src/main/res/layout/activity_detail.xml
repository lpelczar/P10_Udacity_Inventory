<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="4dp">

            <EditText
                android:id="@+id/edit_item_name"
                style="@style/EditorFieldStyle"
                android:hint="Product Name"
                android:inputType="textCapWords" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_margin="10dp"
                    android:background="@color/detailColorPrimaryDark"
                    android:textColorHint="@android:color/white"
                    android:id="@+id/decrease_button"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:hint="--"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/edit_item_quantity"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:hint="Quantity"
                    android:inputType="number" />

                <Button
                    android:layout_margin="10dp"
                    android:background="@color/detailColorPrimaryDark"
                    android:textColorHint="@android:color/white"
                    android:id="@+id/increase_button"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:hint="+"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_item_price"
                    style="@style/EditorFieldStyle"
                    android:hint="Price"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/label_units"
                    style="@style/EditorUnitsStyle"
                    android:text="$" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="How much to increase or decrease quantity by"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:id="@+id/edit_item_indicator"
            android:fontFamily="sans-serif-light"
            android:textAppearance="?android:textAppearanceMedium"
            android:hint="1"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@color/detailColorPrimaryDark"
            android:textColorHint="@android:color/white"
            android:id="@+id/add_photo_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Add a photo"
            android:layout_marginRight="8dp"/>

        <Button
            android:background="@color/detailColorPrimaryDark"
            android:textColorHint="@android:color/white"
            android:id="@+id/take_photo_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Take a photo"
            android:layout_marginLeft="8dp"/>

        </LinearLayout>
</LinearLayout>
